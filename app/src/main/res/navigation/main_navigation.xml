<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.xtapps.messageowl.ui.home.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_groupRoomFragment"
            app:destination="@id/roomFragment" />
    </fragment>
    <fragment
        android:id="@+id/roomFragment"
        android:name="com.xtapps.messageowl.ui.room.RoomFragment"
        android:label="fragment_room"
        tools:layout="@layout/fragment_room">
        <argument
            android:name="room_id"
            app:argType="string" />
        <argument
            android:name="is_group"
            app:argType="boolean" />
    </fragment>
</navigation>