<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.xtapps.messageowl.ui.home.HomeFragment"
        android:label="HomeFragment">
        <action
            android:id="@+id/action_homeFragment_to_roomFragment"
            app:destination="@id/roomFragment" />
        <action
            android:id="@+id/action_homeFragment_to_completeProfileFragmentFirst"
            app:destination="@id/editProfileFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/main_navigation"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_homeFragment_to_completeProfileFragment"
            app:destination="@id/editProfileFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/editProfileFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/roomFragment"
        android:name="com.xtapps.messageowl.ui.room.RoomFragment"
        android:label="fragment_room"
        tools:layout="@layout/fragment_room">
        <argument
            android:name="room_id"
            app:argType="string" />
        <action
            android:id="@+id/action_roomFragment_self"
            app:destination="@id/roomFragment" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.xtapps.messageowl.EditProfileFragment"
        android:label="fragment_complete_profile"
        tools:layout="@layout/fragment_complete_profile" >
        <action
            android:id="@+id/action_completeProfileFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/main_navigation"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>