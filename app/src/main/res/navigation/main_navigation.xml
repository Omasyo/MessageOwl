<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/homeFragment">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.xtapps.messageowl.MainActivity"
        android:label="MainActivity" />
    <activity
        android:id="@+id/authActivity"
        android:name="com.xtapps.messageowl.ui.auth.AuthActivity"
        android:label="activity_auth"
        tools:layout="@layout/activity_auth" />
    <activity
        android:id="@+id/privateChatActivity"
        android:name="com.xtapps.messageowl.PrivateChatActivity"
        android:label="activity_private_chat"
        tools:layout="@layout/activity_private_chat" />
    <fragment
        android:id="@+id/contactsFragment"
        android:name="com.xtapps.messageowl.ui.contacts.ContactsFragment"
        android:label="fragment_contacts"
        tools:layout="@layout/fragment_contacts" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.xtapps.messageowl.HomeFragment"
        android:label="HomeFragment" />
</navigation>